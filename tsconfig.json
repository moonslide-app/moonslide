{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": ["src/**/*", "src-main/**/*", "src-shared/**/*", "forge.config.ts"]
}
